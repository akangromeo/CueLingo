<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".ui.detaildictionary.DetailDictionaryActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/rectangle_curved_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary"></ImageView>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_dictionary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lexend_mega_regular"
        android:text="@string/dictionary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
        app:layout_constraintStart_toEndOf="@+id/iv_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_logo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_dictionary"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/detail_dictionary_image_platform"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dictionary_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"
        android:src="@drawable/item"
        app:layout_constraintBottom_toTopOf="@+id/iv_dictionary"
        app:layout_constraintEnd_toEndOf="@+id/iv_dictionary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_dictionary" />

    <TextView
        android:id="@+id/tv_dictionary_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_mega_regular"
        android:gravity="center_horizontal"
        android:text="kamus"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dictionary_name"
        app:layout_constraintEnd_toEndOf="@+id/iv_dictionary_name"
        app:layout_constraintStart_toStartOf="@+id/iv_dictionary_name"
        app:layout_constraintTop_toTopOf="@+id/iv_dictionary_name" />

    <ImageView
        android:id="@+id/ib_try_now"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/trynow_button"
        app:layout_constraintStart_toStartOf="@+id/iv_dictionary"
        app:layout_constraintTop_toBottomOf="@+id/iv_dictionary" />

    <ImageView
        android:id="@+id/ib_find_another"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/find_another_button"
        app:layout_constraintBottom_toBottomOf="@+id/ib_try_now"
        app:layout_constraintEnd_toEndOf="@+id/iv_dictionary"
        app:layout_constraintTop_toTopOf="@+id/ib_try_now"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>