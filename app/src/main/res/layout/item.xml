<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp">

            <ImageView
                android:id="@+id/iv_dictionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dictionary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dictionary"
                android:fontFamily="@font/lexend_mega_regular"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_dictionary"
                app:layout_constraintEnd_toEndOf="@+id/iv_dictionary"
                app:layout_constraintStart_toStartOf="@+id/iv_dictionary"
                app:layout_constraintTop_toTopOf="@+id/iv_dictionary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>